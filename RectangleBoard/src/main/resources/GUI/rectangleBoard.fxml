<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import com.jfoenix.controls.JFXToggleButton?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.effect.Light.Distant?>
<?import javafx.scene.effect.Lighting?>
<?import javafx.scene.effect.Shadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<TabPane xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.RectangleBoardController">
   <tabs>
      <Tab closable="false" text="Cell Editor">
         <content>
            <AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0">
            	<children>
                  <AnchorPane fx:id="board" prefHeight="600.0" prefWidth="600.0" />
                  <JFXTextField layoutX="620.0" layoutY="72.0" promptText="Enter file name" />
                  <JFXToggleButton layoutX="616.0" layoutY="14.0" text="Edit">
                     <effect>
                        <Lighting>
                           <bumpInput>
                              <Shadow />
                           </bumpInput>
                           <light>
                              <Light.Distant />
                           </light>
                        </Lighting>
                     </effect>
                  </JFXToggleButton>
                  <JFXButton fx:id="button" buttonType="RAISED" contentDisplay="CENTER" layoutX="662.0" layoutY="114.0" onAction="#display" style="-fx-background-color: #D84315;" text="Load" />
                  <VBox alignment="CENTER" layoutX="656.0" layoutY="184.0" prefHeight="167.0" prefWidth="55.0" spacing="40.0">
                     <children>
                        <JFXButton buttonType="RAISED" contentDisplay="CENTER" style="-fx-background-color: #8BC34A;" text="GO" />
                        <JFXButton style="-fx-background-color: #FFCA28;" text="Pause" />
                        <JFXButton style="-fx-background-color: #ff0000;" text="HALT!" />
                        <JFXButton buttonType="RAISED" contentDisplay="CENTER" style="-fx-background-color: #03A9F4;" text="Clear" />
                     </children>
                  </VBox>
            	</children>
            </AnchorPane>
         </content>
      </Tab>
   </tabs>
</TabPane>
